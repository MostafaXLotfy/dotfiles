

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# volume control
XF86AudioLowerVolume
	pulseaudio-ctl down 5
XF86AudioRaiseVolume
	pulseaudio-ctl up 5
XF86AudioMute
	pulseaudio-ctl mute

# screen shots
Print
	scrot -z '%Y-%m-%d_%H%M%S_scrot.png' -e 'mv $f ~/shots/'

super + Print
	scrot -z '%Y-%m-%d_%H%M%S_scrot.png' -e 'mv $f ~/shots/' -s
